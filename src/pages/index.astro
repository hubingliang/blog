---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
// import Socials from "@/components/Socials.astro";
// import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import Hr from "@/components/Hr.astro";
import HeroPost from "@/components/HeroPost.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconRss from "@/assets/icons/IconRss.svg";
// import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";
// import { SOCIALS } from "@/constants";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
// const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
const latestPost = sortedPosts[0]; // 获取最新的文章
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index">
    <section id="hero" class="pt-8 pb-6">
      <h1 class="my-4 inline-block text-4xl font-bold sm:my-8 sm:text-5xl">
        Brian Hu
      </h1>
      <a
        target="_blank"
        href="/rss.xml"
        class="inline-block"
        aria-label="rss feed"
        title="RSS Feed"
      >
        <IconRss
          width={20}
          height={20}
          class="scale-125 stroke-accent stroke-3 rtl:-rotate-90"
        />
        <span class="sr-only">RSS Feed</span>
      </a>

      <div class="flex flex-col gap-2">
        <p class="mt-2">Tech. Music. Life.</p>

        <!-- <p class="mt-4 font-bold">
          Don't Worry. Don't Compare. Don't Expect Too Fast. Be Kind To
          Yourself.
        </p> -->
      </div>
      <!-- <p class="mt-4">
        Read the blog posts or check
        <LinkButton
          class="underline decoration-dashed underline-offset-4 hover:text-accent"
          href="https://github.com/satnaing/astro-paper#readme"
        >
          README
        </LinkButton> for more info.
      </p> -->
      <!-- {
        // only display if at least one social link is enabled
        SOCIALS.length > 0 && (
          <div class="mt-4 flex flex-col sm:flex-row sm:items-center">
            <div class="me-2 mb-1 whitespace-nowrap sm:mb-0">Social Links:</div>
            <Socials />
          </div>
        )
      } -->
    </section>

    <Hr />

    <!-- {
      featuredPosts.length > 0 && (
        <>
          <section id="featured" class="pt-12 pb-6">
            <h2 class="mb-8 text-2xl font-semibold tracking-wide">Featured</h2>
            <ul class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
              {featuredPosts.map(data => (
                <Card variant="h3" {...data} />
              ))}
            </ul>
          </section>
          {recentPosts.length > 0 && <Hr />}
        </>
      )
    } -->

    <!-- Latest Post Hero -->
    {
      latestPost && (
        <section id="hero-post" class="pt-12 pb-6">
          <HeroPost post={latestPost} />
        </section>
      )
    }

    <Hr />

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-12 pb-6">
          <div class="mb-8 flex items-center justify-between">
            <h2 class="text-2xl font-semibold tracking-wide">
              Recent Posts
            </h2>
            {recentPosts.length > SITE.postPerIndex && (
              <a
                href="/posts/"
                class="inline-flex items-center rounded-lg border-2 border-accent bg-transparent px-4 py-2 text-sm font-medium text-accent transition-all duration-200 hover:bg-accent hover:text-background focus:ring-2 focus:ring-accent focus:ring-offset-2 focus:outline-none"
              >
                <span>View All</span>
                <svg
                  class="ml-1 h-3 w-3"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17 8l4 4m0 0l-4 4m4-4H3"
                  />
                </svg>
              </a>
            )}
          </div>
          <ul
            id="posts-grid"
            class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3"
          >
            {recentPosts.slice(1, SITE.postPerIndex).map((data) => (
              <Card variant="h3" {...data} />
            ))}
          </ul>
        </section>
      )
    }
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }


  });
</script>
